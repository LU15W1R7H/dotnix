profile {
  output eDP-1 enable scale 1.5
}

# dual monitor
profile {
  output eDP-1 disable
  output "Samsung Electric Company U28H75x HTPJ700579" enable position 0,0 scale 1.25
  output "Samsung Electric Company U28D590 Unknown" enable position 3840,0 scale 1.25
}

# newer samsung monitor
profile {
  output eDP-1 disable
  output "Samsung Electric Company U28H75x HTPJ700579" enable scale 1.25
}

# older samsung monitor
profile {
  #output eDP-1 disable
  #output "Samsung Electric Company U28D590 Unknown" enable scale 1.25
  output eDP-1 enable position 3072,0 scale 1.5
  output "Samsung Electric Company U28D590 Unknown" enable position 0,0 scale 1.25
}

# projector
profile {
  output eDP-1 disable
  output "LG Electronics LG PROJECTOR 0x00000101" enable scale 2
}

# ami tv
profile {
  output eDP-1 disable
  output "LG Electronics LG TV SSCR2 0x00000101" enable scale 2
}

